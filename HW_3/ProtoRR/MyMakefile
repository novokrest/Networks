CXX = g++-4.9
CXXFLAGS = -c -std=c++11 -Wall -W
LDFLAGS = -L/usr/local/lib -lprotobuf -D_THREAD_SAFE
SOURCES = main.cpp request.pb.cpp 
INCPATH = -I. -I/usr/local/include
SOURCES = main.cpp request.pb.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXECUTABLE = client

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CXX) $(CXXFLAGS) $(INCPATH) $< -o $@

clean:
	rm -f *.o client
